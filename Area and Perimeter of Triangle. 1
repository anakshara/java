import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner TR = new Scanner(System.in);
        
        float b = TR.nextFloat();
        float h = TR.nextFloat();
        float s1 = TR.nextFloat();
        float s2 = TR.nextFloat();
        float s3 = TR.nextFloat();
        
        double area = 0.5 * b * h;
        double perimeter = s1 + s2 + s3;
        
        System.out.printf("Area of Triangle is %.2f\n", area);
        System.out.printf("Perimeter of Triangle is %.2f\n", perimeter);
    }
}
